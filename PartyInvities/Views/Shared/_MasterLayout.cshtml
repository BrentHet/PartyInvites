@using PartyInvities.Extensions;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.paper.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #F1F1F1;
            padding: 10px;
        }

        .table-content {
            margin: auto;
            width: 60%;
            padding: 5px;
            border-collapse: separate;
            border-spacing: 10px;
        }

        p.important-question {
            color: green;
            font-size: 1.5em;
            padding: 0px 20px;
        }
        table, td, th { border: thin solid black; border-collapse: collapse;
            padding: 5px; background-color: lemonchiffon;
            text-align: left; margin: 10px 0; }
        div.load { color: red; margin: 10px 0; font-weight: bold; }
        div.ajaxLink { margin-top: 10px; margin-right: 5px; float: left; }
    </style>
</head>
<body>
    <div>
        @if (IsSectionDefined("TopNav")) { 
            @RenderSection("TopNav")
        }
        else
        {
            <div class="text-center"><b>There is no TopNav Section in this View.</b></div>
        }

        @RenderBody()

        @RenderSection("ContactUs", false)
    </div>
</body>
</html>
