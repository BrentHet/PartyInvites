@model PartyInvities.Models.RentalProperty

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("/Rental/Edit"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RentalProperty</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Name):&nbsp;</td>
                <td>@Html.TextBox("ModelNameTextBox", @Model.Name)</td>
                <td>@Html.TextBoxFor(m => m.Name)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ShortDescription):&nbsp;</td>
                <td>@Html.TextBox("ModelNameTextBox", @Model.ShortDescription, new Dictionary<string, object> { { "size", "60" } })&nbsp;</td>
                <td>@Html.TextBoxFor(m => m.ShortDescription, new Dictionary<string, object> { { "size", "60" } })</td>
            </tr>
            <tr>
                <td style="vertical-align: top;">@Html.Label("TextArea"):&nbsp;</td>
                <td>@Html.TextArea("ModelNameTextBox", @Model.ShortDescription, 4, 35, null)</td>
                <td>@Html.TextAreaFor(m => m.ShortDescription, 4, 35, null)</td>
            </tr>
        </table>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Save", "Edit", @Model, new { @class="btn btn-default" } )
                <input type="submit" value="Save Old" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
