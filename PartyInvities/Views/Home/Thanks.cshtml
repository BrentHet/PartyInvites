@model PartyInvities.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.paper.css" rel="stylesheet" />
    <title>Thanks</title>
    <style>
        body {background-color: #F1F1F1;}
    </style></head>
<body>
    <div class="text-center">
        <h1>Thanks @Model.Name!</h1>
        <div class="lead">
            @if (Model.WillAttend == true)
            {
                @:It's great that you're coming.  Go Heels!
            }
            else
            {
                @:Rather watch them alone?  We understand!
            }
        </div>
    </div>
</body>
</html>
