@model PartyInvities.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Styles/Styles.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.paper.css" rel="stylesheet" />
    <title>RSVP Form</title>
    <style>
        body {background-color: #F1F1F1; padding-left: 10px;}
    </style>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <br />
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label>Name: </label>@Html.TextBoxFor(user => user.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Email: </label>@Html.TextBoxFor(user => user.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Phone: </label>@Html.TextBoxFor(user => user.Phone, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Will you attend?&nbsp;</label>
                        @Html.DropDownListFor(user => user.WillAttend, new[] {
                                new SelectListItem() {Text = "Yes, I'll be there", Value = bool.TrueString},
                                new SelectListItem() {Text = "No, I can't come", Value = bool.FalseString}
                            }, "Select a Response", new { style = "width: 175px; font-size: 11px;" })
                    </div>
                    <div class="text-center">
                        <input class="btn btn-success" type="submit" value="Send Response" />
                    </div>
                }
            </div>
        </div>
</body>
</html>
